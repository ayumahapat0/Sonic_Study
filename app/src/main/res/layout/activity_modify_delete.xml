<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/modifyDefBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text="Modify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/def_modify" />

    <Button
        android:id="@+id/modifyTermBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text="Modify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term_modify" />

    <TextView
        android:id="@+id/term_modify"
        android:layout_width="358dp"
        android:layout_height="63dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="136dp"
        android:hint="Term"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/def_modify"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="37dp"
        android:hint="Definition"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyTermBtn" />

    <Button
        android:id="@+id/saveChangesBtn"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="70dp"
        android:text="Save Changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyDefBtn" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="136dp"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/saveChangesBtn"
        app:layout_constraintTop_toBottomOf="@+id/def_modify" />
</androidx.constraintlayout.widget.ConstraintLayout>